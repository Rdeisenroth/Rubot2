{
    "compilerOptions": {
        "target": "ES2022",
        "module": "commonjs",
        // "moduleResolution": "node",
        "strict": true,
        // "lib": [
        //     "es6",
        //     "dom"
        // ],
        "sourceMap": true,
        "types": [
            // add node as an option
            "node",
            //"reflect-metadata",
            "jest"
        ],
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noEmitHelpers": true,
        "importHelpers": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "outDir": "dist",
        "allowJs": true,
        "typeRoots": [
            "node_modules/@types",
            "typings/index.d.ts"
        ]
    },
    "exclude": [],
    "include": [
        "src/**/*",
        "typings/index.d.ts",
        "typings/decs.d.ts"
    ]
}